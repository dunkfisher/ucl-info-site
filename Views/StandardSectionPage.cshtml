@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.StandardSectionPage>
@{
    Layout = "Master.cshtml";
}

@section PageTitle {
    @Model.Name
}

<h1>@Model.Heading</h1>
<div id="text-wrapper">@Model.MainText</div>

@foreach (var blockItem in Model.Sections)
{
    var textSection = (TextSection)blockItem.Content;
    <div class="standard-section">
        <details>
            <summary>
                <h3>@textSection.Heading</h3>
            </summary>
            <div class="standard-section-text">
                @textSection.Text
            </div>
        </details>
    </div>
}